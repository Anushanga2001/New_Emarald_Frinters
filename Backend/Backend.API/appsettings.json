{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=logistics_db;Username=logistics_user;Password=${DB_PASSWORD:-dev_password};Minimum Pool Size=5;Maximum Pool Size=100;Connection Lifetime=0;Connection Idle Lifetime=300"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLongForProduction!",
    "Issuer": "ShippingLine",
    "Audience": "ShippingLineUsers",
    "ExpirationHours": 24
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 15
  }
}
